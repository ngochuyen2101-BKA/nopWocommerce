@model Nop.Plugin.CustomPoint.ManageCustom.Models.ManageCustomModel

<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden"/>
@if (ViewBag.RefreshPage == true)
{
    <script>
        try {window.opener.document.forms['@(Context.Request.Query["formId"])'].@(Context.Request.Query["btnId"]).click();}
        catch (e){}
        window.close();
    </script>
}
<div class="cards-group">
    <div class="card card-default card-popup">

        <div class="card-body">
            <div class="form-group row">
                <div class="col-sm-3">
                    <nop-label asp-for="CustomerName" />
                </div>
                <div class="col-sm-9">
                    <nop-editor asp-for="CustomerName" />
                    <span asp-validation-for="CustomerName"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-3">
                    <nop-label asp-for="Email" />
                </div>
                <div class="col-sm-9">
                    <nop-textarea asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
        </div>
    </div>
</div>